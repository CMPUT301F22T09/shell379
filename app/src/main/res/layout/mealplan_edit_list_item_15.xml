<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="183dp">

        <TextView
            android:id="@+id/mpv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:elevation="8dp"
            android:text="Name"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mpv_servings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="73dp"
            android:text="Servings"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginEnd="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/mpv_servings_label">

            <Button
                android:id="@+id/mpe_sub_btn"
                android:layout_width="43dp"
                android:layout_height="46dp"
                android:layout_marginRight="0dp"
                android:text="-"
                app:cornerRadius="50dp" />

            <TextView
                android:id="@+id/mpv_servings_val"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="0dp"
                android:text="(servings)"
                android:textAlignment="center"
                android:textSize="18sp" />

            <Button
                android:id="@+id/mpe_add_btn"
                android:layout_width="39dp"
                android:layout_height="46dp"
                android:layout_marginEnd="0dp"
                android:text="+"
                app:cornerRadius="50dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mpv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginBottom="8dp"
            android:text="Date (tap to modify)"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mpv_servings_label"
            app:layout_constraintVertical_bias="0.53" />

        <TextView
            android:id="@+id/mpv_date_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:text="(date)"
            android:textAlignment="textEnd"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/mpv_date"
            app:layout_constraintTop_toTopOf="@+id/mpv_date" />

        <DatePicker
            android:id="@+id/editPlanStart2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:datePickerMode="calendar"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mpv_date"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>